pragma solidity ^0.8.0;

contract JBSmartContract {
    uint256 public value;

    function setValue(uint256 _newValue) external {
        require(_newValue != 0, "The value must be greather than zero");
        value = _newValue;
    }

    function assertExample1(uint256 _num) external pure returns (uint256) {
        assert(_num != 0);
        return _num;
    }

    function revertExample1(uint256 _num) external pure returns (uint256) {
        if (_num == 0) {
            revert("The value must be greather than zero");
        }

        return _num;
    }
}
